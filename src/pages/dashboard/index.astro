          <!-- References -->
          <div class="pt-3 pl-3">
            <div class="h-full w-full max-w-4xl bg-base-300 rounded-lg shadow-md p-4">
              <h1 class="text-xl font-bold text-center">References <button class="btn btn-primary btn-circle btn-sm" onclick="reference_add.showModal()">+</button></h1>
              <dialog id="reference_add" class="modal">
                <div class="modal-box">
                  <h3 class="text-lg font-bold mb-1">Edit a reference.</h3>
                  
                  <form method="POST">
                    <label class="form-control w-full">
                      <div class="label">
                        <span class="label-text">Job title</span>
                      </div>
                      <input type="text" name="reference_job_title" class="input input-bordered" required/>
                    </label>

                    <label class="form-control w-full">
                      <div class="label">
                        <span class="label-text">Company Name</span>
                      </div>
                      <input type="text" name="reference_company_name" class="input input-bordered" required/>
                    </label>

                    <label class="form-control w-full">
                      <div class="label">
                        <span class="label-text">Name</span>
                      </div>
                      <input type="text" name="reference_name" class="input input-bordered" required/>
                    </label>

                    <label class="form-control w-full">
                      <div class="label">
                        <span class="label-text">Reference Email</span>
                      </div>
                      <input type="email" name="reference_email" class="input input-bordered"/>
                    </label>

                    <label class="form-control w-full">
                      <div class="label">
                        <span class="label-text">Reference Phone Number</span>
                      </div>
                      <input type="text" name="reference_phone" class="input input-bordered" pattern="0[789][0-9]{9}"/>
                    </label>

                    <input type="hidden" name="type" id="type" value="reference_add"/>
                    <button type="submit" class="btn btn-primary w-full mt-2">Save</button>
                  </form>
                </div>
                <form method="dialog" class="modal-backdrop">
                  <button>close</button>
                </form>
              </dialog>

              <div class=" w-full bg-base-200 rounded-lg shadow-md p-1 mt-2">
                <div class="overflow-x-auto">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Company Name</th>
                        <th>Job Title</th>
                        <th>Name</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      {references.documents.map((reference: {name: string; company_name: string; job_title: string; $id: string;}) => (
                        <tr>
                          <th>{reference.company_name}</th>
                          <td>{reference.job_title}</td>
                          <td>{reference.name}</td>
                          <td class="flex justify-end">
                            <button onclick={"reference_edit_" + reference.$id + ".showModal()"} class="btn btn-primary mr-2">Edit</button>

                            <form method="POST">
                              <input type="hidden" name="reference_id" value={reference.$id}/>
                              <input type="hidden" name="type" id="type" value="reference_delete"/>
                              <button type="submit" class="btn btn-error">-</button>
                            </form>
                          </td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                  {references.documents.map((reference: {name: string; company_name: string; job_title: string; $id: string; contact_email: string; contact_phone: string;}) => (
                    <dialog id={"reference_edit_" + reference.$id} class="modal">
                      <div class="modal-box">
                        <h3 class="text-lg font-bold mb-1">Edit a reference.</h3>
                        
                        <form method="POST">
                          <label class="form-control w-full">
                            <div class="label">
                              <span class="label-text">Job title</span>
                            </div>
                            <input type="text" name="reference_job_title" class="input input-bordered" value={reference.job_title} required/>
                          </label>

                          <label class="form-control w-full">
                            <div class="label">
                              <span class="label-text">Company Name</span>
                            </div>
                            <input type="text" name="reference_company_name" class="input input-bordered" value={reference.company_name} required/>
                          </label>

                          <label class="form-control w-full">
                            <div class="label">
                              <span class="label-text">Name</span>
                            </div>
                            <input type="text" name="reference_name" class="input input-bordered" value={reference.name} required/>
                          </label>

                          <label class="form-control w-full">
                            <div class="label">
                              <span class="label-text">Reference Email</span>
                            </div>
                            <input type="email" name="reference_email" class="input input-bordered" value={reference.contact_email}/>
                          </label>

                          <label class="form-control w-full">
                            <div class="label">
                              <span class="label-text">Reference Phone Number</span>
                            </div>
                            <input type="text" name="reference_phone" class="input input-bordered" value={reference.contact_phone} pattern="0[789][0-9]{9}"/>
                          </label>

                          <input type="hidden" name="type" id="type" value="reference_edit"/>
                          <input type="hidden" name="reference_id" value={reference.$id}/>
                          <button type="submit" class="btn btn-primary w-full mt-2">Save</button>
                        </form>
                      </div>
                      <form method="dialog" class="modal-backdrop">
                        <button>close</button>
                      </form>
                    </dialog>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="grid grid-cols-2 flex-col">
          <!-- Skills -->
          <div class="pr-3 pt-3">
            <div class="h-full w-full max-w-4xl bg-base-300 rounded-lg shadow-md p-4">
              <h1 class="text-xl font-bold text-center">Skills <button onclick="skill_add_modal.showModal()" class="btn btn-primary btn-circle btn-sm">+</button></h1>
              <dialog id="skill_add_modal" class="modal">
                <div class="modal-box w-max">
                  <h3 class="text-lg font-bold mb-1">Add a skill.</h3>
                  
                  <form method="POST">
                    <input type="text" class="input input-bordered w-full" name="skill"/>
                    <input type="hidden" name="type" id="type" value="skill_add"/>
                    <button type="submit" class="btn btn-primary w-full mt-2">Add</button>
                  </form>
                </div>
                <form method="dialog" class="modal-backdrop">
                  <button>close</button>
                </form>
              </dialog>

              <div class="flex items-center justify-center flex-col overflow-auto">
                {skills.documents.map((skill: { skill: string; $id: string; }) => (
                  <div class="pt-2 flex flex-row">
                    <input type="text" class="input input-bordered w-max max-w-xs mr-2" disabled value={skill.skill}/>
                    <button class="btn btn-primary mr-2" onclick={"skill_" + skill.$id + "_edit_modal.showModal()"}>Edit</button>

                    <dialog id={"skill_" + skill.$id + "_edit_modal"} class="modal">
                      <div class="modal-box w-max">
                        <h3 class="text-lg font-bold mb-2">Edit a skill.</h3>
                        
                        <form method="POST">
                          <input type="text" class="input input-bordered w-full max-w-xs mr-1" value={skill.skill} name="skill"/>
                          <input type="hidden" name="type" id="type" value="skill_edit"/>
                          <input type="hidden" name="skill_id" value={skill.$id}/>
                          <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                      </div>
                      <form method="dialog" class="modal-backdrop">
                        <button>close</button>
                      </form>
                    </dialog>

                    <form method="POST">
                      <input type="hidden" name="type" id="type" value="skill_delete"/>
                      <input type="hidden" name="skill_id" value={skill.$id}/>
                      <button type="submit" class="btn btn-error">-</button>
                    </form>
                  </div>
                ))}
              </div>
            </div>
          </div>
          <!-- Images -->
          <div class="pt-3 pl-3">
            <div class="h-full w-full max-w-4xl bg-base-300 rounded-lg shadow-md p-4">
              <h1 class="text-xl font-bold text-center">Images <button class="btn btn-primary btn-circle btn-sm" disabled>+</button></h1>
              <div class="flex items-center justify-center">
                <p class="italic">Images are not currently supported</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</AuthLayout>
