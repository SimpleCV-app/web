import { ID, Permission, Query, Role } from 'node-appwrite';
import AuthLayout from '../../layouts/AuthLayout.astro';

const { user, databases } = Astro.locals;

const pages = (await databases.listDocuments(import.meta.env.CV_DB0_ID, "pages", [Query.equal("uid", [user.$id])]))
const skills = (await databases.listDocuments(import.meta.env.CV_DB0_ID, "skills", [Query.equal("uid", [user.$id])]))
const contact_details = (await databases.listDocuments(import.meta.env.CV_DB0_ID, "contact-details", [Query.equal("uid", [user.$id])]))
const references = (await databases.listDocuments(import.meta.env.CV_DB0_ID, "reference", [Query.equal("uid", [user.$id])]))
const education = (await databases.listDocuments(import.meta.env.CV_DB0_ID, "education", [Query.equal("uid", [user.$id])]))
const work_experience = (await databases.listDocuments(import.meta.env.CV_DB0_ID, "work-experience", [Query.equal("uid", [user.$id])]))

if (Astro.request.method == "POST") {
  const data = await Astro.request.formData()
  console.log(data)

  switch (data.get("type")) {
    case "education_add":
      await databases.createDocument(
        import.meta.env.CV_DB0_ID, 
        "education",
        ID.unique(),
        {
          "uid": user.$id,
          "name": data.get("education_name"), 
          "description": data.get("education_description"), 
          "start_year": Number(data.get("education_start_year")), 
          "end_year": (data.get("education_present") == "on" ? null : Number(data.get("education_end_year"))), 
          "present": data.get("education_present") == "on"
        },
        [Permission.write(Role.user(user.$id)), Permission.read(Role.user(user.$id))]
      )
      break;
    case "education_edit":
      await databases.updateDocument(
        import.meta.env.CV_DB0_ID, 
        "education", 
        data.get("education_id"),
        {
          "name": data.get("education_name"), 
          "description": data.get("education_description"), 
          "start_year": Number(data.get("education_start_year")), 
          "end_year": (data.get("education_present") == "on" ? null : Number(data.get("education_end_year"))), 
          "present": data.get("education_present") == "on"
        }
      )
      break;
    case "education_delete":
      await databases.deleteDocument(import.meta.env.CV_DB0_ID, "education", data.get("education_id"))
      break;
    case "work_add":
      await databases.createDocument(
        import.meta.env.CV_DB0_ID, 
        "work-experience", 
        ID.unique(),
        {
          "job_title": data.get("work_job_title"), 
          "job_description": data.get("work_job_description"), 
          "company_name": data.get("work_company_name"),
          "start_date": data.get("work_start_date"), 
          "end_date": (data.get("work_present") == "on" ? null : data.get("work_end_date")), 
          "present": data.get("work_present") == "on",
          "uid": user.$id
        },
        [Permission.write(Role.user(user.$id)), Permission.read(Role.user(user.$id))]
      )
      break;
    case "work_edit":
      await databases.updateDocument(
        import.meta.env.CV_DB0_ID, 
        "work-experience", 
        data.get("work_id"),
        {
          "job_title": data.get("work_job_title"), 
          "job_description": data.get("work_job_description"), 
          "company_name": data.get("work_company_name"),
          "start_date": data.get("work_start_date"), 
          "end_date": (data.get("work_present") == "on" ? null : data.get("work_end_date")), 
          "present": data.get("work_present") == "on"
        }
      )
      break;
    case "work_delete":
      await databases.deleteDocument(import.meta.env.CV_DB0_ID, "work-experience", data.get("work_id"))
      break;
    case "contact_add":
      await databases.createDocument(
        import.meta.env.CV_DB0_ID, 
        "contact-details",
        ID.unique(),
        {"type": data.get("contact_type"), "value": data.get("value"), "uid": user.$id},
        [Permission.write(Role.user(user.$id)), Permission.read(Role.user(user.$id))]
      )
      break;
    case "contact_edit":
      await databases.updateDocument(
        import.meta.env.CV_DB0_ID, 
        "contact-details", 
        data.get("contact_id"),
        {"value": data.get("value")}
      )
      break;
    case "contact_delete":
      await databases.deleteDocument(import.meta.env.CV_DB0_ID, "contact-details", data.get("contact_id"))
      break;
    case "reference_add":
      await databases.createDocument(
        import.meta.env.CV_DB0_ID, 
        "reference",
        ID.unique(),
        {
          "job_title": data.get("reference_job_title"),
          "company_name": data.get("reference_company_name"),
          "name": data.get("reference_name"),
          "contact_email": (data.get("reference_email") ? data.get("reference_email") : null),
          "contact_phone": (data.get("reference_phone") ? data.get("reference_phone") : null),
          "uid": user.$id
        },
        [Permission.write(Role.user(user.$id)), Permission.read(Role.user(user.$id))]
      )
      break;
    case "reference_edit":
      await databases.updateDocument(
        import.meta.env.CV_DB0_ID, 
        "reference", 
        data.get("reference_id"),
        {
          "job_title": data.get("reference_job_title"),
          "company_name": data.get("reference_company_name"),
          "name": data.get("reference_name"),
          "contact_email": (data.get("reference_email") ? data.get("reference_email") : null),
          "contact_phone": (data.get("reference_phone") ? data.get("reference_phone") : null),
        }
      )
      break;
    case "reference_delete":
      await databases.deleteDocument(import.meta.env.CV_DB0_ID, "reference", data.get("reference_id"))
      break;
    case "skill_add":
      await databases.createDocument(
        import.meta.env.CV_DB0_ID, 
        "skills",
        ID.unique(),
        {"skill": data.get("skill"), "uid": user.$id},
        [Permission.write(Role.user(user.$id)), Permission.read(Role.user(user.$id))]
      )
      break;
    case "skill_edit":
      await databases.updateDocument(
        import.meta.env.CV_DB0_ID, 
        "skills", 
        data.get("skill_id"),
        {"skill": data.get("skill")}
      )
      break;
    case "skill_delete":
      await databases.deleteDocument(import.meta.env.CV_DB0_ID, "skills", data.get("skill_id"))
      break;
  }
  return Astro.redirect("/dashboard")
}
