                    function updateValueBox() {
                      var selectMenu = (document.getElementById("contact_type")! as HTMLSelectElement);
                      var valueBox = (document.getElementById("contact_detail_add_value")! as HTMLInputElement);
                      switch (selectMenu.value) {
